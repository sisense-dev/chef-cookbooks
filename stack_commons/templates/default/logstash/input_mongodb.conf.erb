input {
  file {
    path => "<%= @path %>"
    type => "mongodb"
  }
}

filter {
  if [type] == "mongodb" {
    if [path] =~ "mongodb.log" {
      mutate { replace => { type => "mongodb_log" } }
      grok {
        match => { "message" => "%{TIMESTAMP_ISO8601} \[%{WORD:component}\] %{GREEDYDATA:message}" }
      }
      date {
        match => [ "timestamp", "ISO8601" ]
      }
    } else {
      mutate { replace => { type => "mongodb_other" } }
    }
  }
}
